{
	"name": "Shiny Server",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "latest"
        }
    },
    "forwardPorts": [
        3838
    ],
    "portsAttributes": {
        "3838":{
            "label": "Shiny Server",
			"requireLocalPort": true,
			"onAutoForward": "ignore"
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/shiny-app,type=bind", 
    "workspaceFolder": "/shiny-app",
    "postAttachCommand": "R -e shiny::runApp('/shiny-app', host = '0.0.0.0', port = 3838)"
}
