{
	"name": "Shiny Server",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "latest"
        }
    },
    "forwardPorts": [
        3838
    ],
    "portsAttributes": {
        "3838":{
            "label": "Shiny Server",
            "onAutoForward": "notify"
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/shiny-app,type=bind", 
    "workspaceFolder": "/shiny-app"
}
